# Boatable Environment Configuration Template
# Copy this file to .env.local and fill in your API keys

# ============ FIREBASE CONFIGURATION ============
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=boatable-app.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=boatable-app
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=boatable-app.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# ============ MAPS & NAVIGATION ============
# Mapbox API (for marine charts and navigation)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# Google Maps API (backup/alternative)
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your-google-maps-key

# ============ WEATHER SERVICES ============
# NOAA Weather API (primary weather source)
NEXT_PUBLIC_NOAA_API_KEY=your-noaa-api-key

# Windy API (marine weather)
NEXT_PUBLIC_WINDY_API_KEY=your-windy-key

# PredictWind API (sailing weather)
NEXT_PUBLIC_PREDICTWIND_API_KEY=your-predictwind-key

# ============ VESSEL PRICING APIS ============
# NADA Marine Values
NEXT_PUBLIC_NADA_API_KEY=your-nada-key

# BUC Marine Values
NEXT_PUBLIC_BUC_API_KEY=your-buc-key

# YachtWorld API
NEXT_PUBLIC_YACHTWORLD_API_KEY=your-yachtworld-key

# ============ ANALYTICS & MONITORING ============
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id

# Mixpanel (user behavior analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# ============ PAYMENT PROCESSING ============
# Stripe (for marketplace transactions)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# ============ COMMUNICATION SERVICES ============
# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# SendGrid (email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@boatable.com

# ============ EMERGENCY SERVICES ============
# Emergency API Endpoint
NEXT_PUBLIC_EMERGENCY_API_ENDPOINT=https://api.boatable.com/emergency

# Coast Guard API (if available)
NEXT_PUBLIC_COAST_GUARD_API=your-coast-guard-api-key

# ============ DEVELOPMENT & TESTING ============
# Environment
NODE_ENV=development

# Development ports
PORT=3000
FIREBASE_EMULATOR_PORT=9199

# Use emulators for local development
NEXT_PUBLIC_USE_EMULATOR=true

# Debug settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# ============ ALGOLIA SEARCH ============
# Algolia (for search functionality)
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-algolia-search-key
ALGOLIA_ADMIN_API_KEY=your-algolia-admin-key

# ============ IMAGE & FILE STORAGE ============
# Cloudinary (image optimization)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============ THIRD-PARTY INTEGRATIONS ============
# MarineTraffic API (vessel tracking)
MARINE_TRAFFIC_API_KEY=your-marine-traffic-key

# Boats.net API (parts catalog)
BOATS_NET_API_KEY=your-boats-net-key

# BoatUS API (services directory)
BOATUS_API_KEY=your-boatus-key

# ============ SECURITY & AUTHENTICATION ============
# JWT Secret (for API authentication)
JWT_SECRET=your-jwt-secret-key

# Encryption keys
ENCRYPTION_KEY=your-encryption-key

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============ WEBHOOK ENDPOINTS ============
# Stripe Webhook Secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Other webhook secrets
WEBHOOK_SECRET=your-general-webhook-secret